{% extends 'base.html.twig' %}

{% block title %}Hosted Comics{% endblock %}

{% block body %}

<div class="container" xmlns="http://www.w3.org/1999/html">
    <div class="col-10" id="hb-approve-comics">
        <div class="row">
            <h1>Approve Images</h1>
        </div>
        <div class="row mb-2">
                {% for image in images %}
                   <div class="col-4 mb-2">
                       <div class="col border m-1 p-2 {% if image.approved %}bg-success text-white{% endif %}">
                           <div class="row mb-1">
                               <div class="col text-center"><h4>{{ image.comic.name }}</h4></div>
                           </div>
                           <div class="row mb-1">
                               <div class="col text-center">
                                   <img src="{{ image.path }}" alt="{{ image.alttext }}" class="border-3 border-white">
                               </div>
                           </div>
                           <div class="row mb-1">
                               <div class="col text-center">
                                   <a href="/admin/toggle/image/{{ image.id }}" class="btn btn-block {% if image.approved %}btn-primary{% else %}btn-outline-primary{% endif %}"><i class="fas {% if image.approved %}fa-check{% else %}fa-hourglass{% endif %}"></i></a>
                               </div>
                           </div>
                       </div>
                   </div>
                {% endfor %}
        </div>
    </div>
</div>

{% endblock %}

{% block sidebar %}
    {% include "common/sidebar.html.twig" %}
{% endblock %}

